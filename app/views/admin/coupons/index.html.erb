<%= render partial: "shared/admin_nav_bar" %>

<div class="container">
  <h1>機票優惠券清單</h1>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Coupon ID</th>
          <th>Airline</th>
          <th>Destination</th>
          <th>Coupon expiry date</th>
          <th>Flight date from</th>
          <th>Flight date to</th>
          <th>tax</th>
          <th>Others</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @coupons.each do |coupon| %>
        <tr>
          <th scope="row"><%= coupon.id %></th>
          <td><%= coupon.airline %></td>
          <td><%= coupon.destination %></td>
          <td><%= coupon.coupon_expiry_date %></td>
          <td><%= coupon.flight_date_from %></td>
          <td><%= coupon.flight_date_to %></td>
          <td><%= coupon.tax %></td>
          <td><%= coupon.others %></td>
          <td><%= link_to 'Show', admin_coupon_path(coupon) %></td>
          <td><%= link_to 'Edit', edit_admin_coupon_path(coupon) %></td>
          <td> <%= link_to 'Delete', admin_coupon_path(coupon), method: :delete, data: {confirm:"Are you sure?"} %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @coupons %>
  </div>
</div>

