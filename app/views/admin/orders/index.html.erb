<%= render partial: "shared/admin_nav_bar" %>
<div class="container">
  <h1>兌換卷訂單清單</h1>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>訂單ID</th>
          <th>訂單號碼</th>
          <th>客戶Email</th>
          <th>總金額 NTD$</th>
          <th>付款狀態</th>
          <th>寄送狀態</th>
          <th>訂單細節</th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.sn %></td>
          <td><%= order.user.email %></td>
          <td><%= order.amount %></td>
          <td><%= order.payment_status %></td>
          <td><%= order.shipping_status %></td>
          <td><%= link_to "Edit Detail", edit_admin_order_path(order) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>
<%= render partial: "shared/footer"%>