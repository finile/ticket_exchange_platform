<div class="container">
  <h1>使用者清單</h1>
    <div class="row">
      <div class = "col-md- pull-left">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Comments</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= link_to user.name, user_path(user) %></td>
          <td>
          <% user.comments.each do |comment| %>
            <%= comment.content %>
          <% end %>
          </td>
          <td> <%= link_to 'Delete', admin_users_path(user), method: :delete, data: {confirm:"Are you sure?"} %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>
