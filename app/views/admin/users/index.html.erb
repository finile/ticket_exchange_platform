     <div class="container">
         <div class="row">

           <ul class="nav nav-tabs">
            <li role="presentation">
             <%= link_to 'Ticket', admin_tickets_path %>
           </li>
            <li role="presentation" class="active">
             <%= link_to 'User List', admin_users_path %>
           </li>

           </ul>
         </div>
       </div>

       <br>

       <div class="container">
         <div class="row">
         <table class="table table-bordered">
               <thead>
                 <tr>
                   <th>ID</th>

                   <th>User Name</th>
                   <th>Comments</th>
                   <th>Delete</th>

                 </tr>
               </thead>
               <tbody>
                 <% @users.each do |user| %>
                 <tr>
                   <th scope="row"><%= user.id %></th>
                   <td><%= user.name %></td>
                   <td> </td>
                   <td> <%= link_to 'Delete', admin_users_path(user), method: :delete, data: {confirm:"Are you sure?"} %></td>

                   </td>
                 </tr>
                 <% end %>
               </tbody>
             </table>

          </div>
        </div>
