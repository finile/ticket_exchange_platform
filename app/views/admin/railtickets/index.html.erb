<div class="container">
    <div class="row">
    <%= link_to 'Index', tickets_path %>
      <ul class="nav nav-tabs">
       <li role="presentation" >
        <%= link_to 'Ticket', admin_tickets_path %>
      </li>
      <ul class="nav nav-tabs">
       <li role="presentation" >
        <%= link_to 'Coupon', admin_coupons_path %>
      </li>
      <li role="presentation" class="active">
       <%= link_to 'Train Ticket', admin_railtickets_path %>
     </li>
       <li role="presentation" >
        <%= link_to 'User List', admin_users_path %>
      </li>

      </ul>
    </div>
  </div>

  <br>


<h1>高鐵交換平台後台</h1>


<div class="container">
  <div class="row">
  <table class="table table-bordered">
        <thead>
          <tr>
            <th>Train Ticket ID</th>
            <th>Train no</th>
            <th>Train date</th>
            <th>Departure time</th>
            <th>Arrive time</th>
            <th>Departure</th>
            <th>Destination</th>
            <th>User Name</th>
            <th>Price</th>
            <th>Original Discout</th>
            <th>Others</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>

          </tr>
        </thead>
        <tbody>
          <% @railtickets.each do |railticket| %>
          <tr>
            <th scope="row"><%= railticket.id %></th>
            <td><%= railticket.train_no %></td>
            <td><%= railticket.train_date %></td>
            <td><%= railticket.departure_time %></td>
            <td><%= railticket.arrive_time %></td>
            <td><%= railticket.departure %></td>
            <td><%= railticket.destination %></td>
            <td><%= railticket.name %></td>
            <td><%= railticket.price %></td>
            <td><%= railticket.discount %></td>
            <td><%= railticket.others %></td>

            <td><%= link_to 'Show', admin_railticket_path(railticket) %></td>
            <td><%= link_to 'Edit', edit_admin_railticket_path(railticket) %></td>
            <td><%= link_to 'Delete', admin_railtickets_path(railticket), method: :delete, data: {confirm:"Are you sure?"}%></td>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

   </div>
 </div>


<div class="text-center">
<%= paginate @railtickets %>
</div>
