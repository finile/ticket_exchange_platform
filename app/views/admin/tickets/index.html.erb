<h1>機票交換平台後台</h1>

<ul>
  <% @tickets.each do |ticket|%>
    <li>
      <%= ticket.airline %>
      <%= ticket.flight_no %>
      <%= ticket.flight_date %>
      <%= ticket.flight_time %>
      <%= ticket.departure %>
      <%= ticket.destination %>
      <%= ticket.name %>
      <%= ticket.others %>
      <%= link_to 'Show', admin_ticket_path(ticket) %>
      <%= link_to 'Edit', edit_admin_ticket_path(ticket) %>
      <%= link_to 'Delete', admin_tickets_path(ticket), method: :delete, data: {confirm:"Are you sure?"} %>
    </li>
  <% end %>


</ul>
