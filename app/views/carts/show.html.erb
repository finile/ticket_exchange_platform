<h1>Cart</h1>


    <% @items.each do |item| %>
      <%= item.coupon.airline %> <br>
      $<%= item.coupon.price %> <br>
      Cart Quantity: <%= item.quantity %>
      Quantity: <%= item.coupon.quantity%> <br>
      <%= link_to "Detele", remove_from_cart_coupon_path(item.coupon), method: :post, remote: true %> <br>
      
      <br>
    <% end %>
    <%= current_cart.subtotal %> <br>


<%= form_for @order do |f| %>
  <section class="panel">
    <h2>Shpping Information</h2>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
  </section>

  <%= f.submit "CHECKOUT", class: "btn" %>

<% end %>