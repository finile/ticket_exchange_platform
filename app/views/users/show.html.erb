<%= render partial: "shared/navbar" %>
<div id="content">
  <div class="container">
    <div class="row">     
      <div class="col-sm-9">
        <div class="blog_content">
          <div class="num-comments">Posted Flight Tickets</div>
          <% @posted_tickets.each do |ticket| %>
            <div class="comment-block clearfix">
                <figure>
                    <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                </figure>
                <div class="caption">
                    <div class="top clearfix">
                      <div class="txt1">Destination to<a href="#"> <%= ticket.destination %></a></div>
                      <span>|</span>
                      <div class="txt2">Flight Date: <%= ticket.flight_date %></div>
                      <span>|</span>
                      <div class="txt3"><%= link_to 'Show', ticket_path(ticket) %></div>
                    </div>
                    <div class="txt">
                      <%= ticket.airline %> <br>
                      Flight No: <%= ticket.flight_no %> 
                    </div>
                    <div class="txt">
                      <a href="#"><%= link_to 'Delete', ticket_path(ticket), method: :delete, class: "btn btn-info", data: {confirm:"Are you sure?"} %></a>
                    </div>
                </div>
            </div>
          <% end %>
          <a name="posted_coupon"></a>
          <div class="num-comments">Posted Coupon</div>
          <% @posted_coupons.each do |coupon| %>
            <div class="comment-block clearfix">
                <figure>
                    <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                </figure>
                <div class="caption">
                    <div class="top clearfix">
                      <div class="txt1">Destination to<a href="#"> <%= coupon.destination %></a></div>
                      <span>|</span>
                      <div class="txt2">Expiry Date: <%= coupon.coupon_expiry_date %></div>
                      <span>|</span>
                      <div class="txt3"><%= link_to 'Show', coupon_path(coupon) %></div>
                    </div>
                    <div class="txt">
                      使用期間: <br>
                      <%= coupon.flight_date_from %> ~ <%= coupon.flight_date_to %> 
                    </div>
                     <div class="txt">
                      <%= link_to 'Delete', coupon_path(coupon), method: :delete, class: "btn btn-info", data: {confirm:"Are you sure?"} %>
                    </div>
                </div>
            </div>
          <% end %>
          <a name="posted_rail_ticket"></a>
          <div class="num-comments">Posted Railticket</div>
          <% @posted_railtickets.each do |railticket| %>
            <div class="comment-block clearfix">
                <figure>
                    <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                </figure>
                <div class="caption">
                  <div class="top clearfix">
                    <div class="txt1">Destination to<a href="#"> <%= railticket.destination %></a></div>
                    <span>|</span>
                    <div class="txt2">Train date: <%= railticket.train_date %></div>
                    <span>|</span>
                    <div class="txt3"><%= link_to 'Show', railticket_path(railticket) %></div>
                  </div>
                  <div class="txt">
                    Train no: <%= railticket.train_no %> <br>
                    Train date: <%= railticket.train_date %> <br>
                    Departure time: <%= railticket.departure_time %>
                  </div>
                  <div class="txt">
                    <%= render partial: "shared/train_favorite", locals: {railticket: railticket} %>
                  </div>
                </div>
            </div>
         <% end %>
          <a name="favorited_ticket"></a>
          <div class="num-comments">Favorited Flight Tickets</div>
          <% @favorited_tickets.each do |ticket| %>
            <div class="comment-block clearfix">
                <figure>
                    <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                </figure>
                <div class="caption">
                    <div class="top clearfix">
                      <div class="txt1">Destination to<a href="#"> <%= ticket.destination %></a></div>
                      <span>|</span>
                      <div class="txt2">Flight Date: <%= ticket.flight_date %></div>
                      <span>|</span>
                      <div class="txt3"><%= link_to 'Show', ticket_path(ticket) %></div>
                    </div>
                    <div class="txt">
                      <%= ticket.airline %> <br>
                      Flight No: <%= ticket.flight_no %> 
                    </div>
                </div>
            </div>
          <% end %>
          
          <a name="favorited_coupon"></a>
          <div class="num-comments">Favorited Coupon</div>
          <% @favorited_coupons.each do |coupon| %>
            <div class="comment-block clearfix">
                <figure>
                    <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                </figure>
                <div class="caption">
                    <div class="top clearfix">
                      <div class="txt1">Destination to<a href="#"> <%= coupon.destination %></a></div>
                      <span>|</span>
                      <div class="txt2">Expiry Date: <%= coupon.coupon_expiry_date %></div>
                      <span>|</span>
                      <div class="txt3"><%= link_to 'Show', coupon_path(coupon) %></div>
                    </div>
                    <div class="txt">
                      使用期間: <br>
                      <%= coupon.flight_date_from %> ~ <br>
                      <%= coupon.flight_date_to %> 
                    </div>
                </div>
            </div>
          <% end %>
          <div class="num-comments">Favorited Railticket</div>
          <a name="favorited_railticket"></a>
          <% @favorited_railtickets.each do |railticket| %>
          <div class="comment-block clearfix">
            <figure>
              <img src="http://placehold.it/70x70" alt="" class="img-responsive">
            </figure>
            <div class="caption">
              <div class="top clearfix">
                <div class="txt1">Destination to<a href="#"> <%= railticket.destination %></a></div>
                <span>|</span>
                <div class="txt2">Train date: <%= railticket.train_date %></div>
                <span>|</span>
                <div class="txt3"><%= link_to 'Show', railticket_path(railticket) %></div>
              </div>
              <div class="txt">
                Train no: <%= railticket.train_no %> <br>
                Train date: <%= railticket.train_date %> <br>
                Departure time: <%= railticket.departure_time %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="blog_sidebar">
          <h3><%= current_user.name%></h3>
          <ul class="ul4">
            <li><a>Posted Flight Ticket<span><%= @user.tickets.count %></span></a></li>
            <li><a href="#posted_coupon">Posted Coupon<span><%= @user.coupons.count %></span></a></li>
            <li><a href="#posted_rail_ticket">Posted Rail Ticket<span><%= @user.railtickets.count %></span></a></li>
            <li><a href="#favorited_ticket">Favorited Flight Ticket<span><%= @favorited_tickets.count %></span></a></li>
            <li><a href="#favorited_coupon">Favorited Coupon<span><%= @favorited_coupons.count %></span></a></li>
            <li><a href="#favorited_railticket">Favorited Railtickets<span><%= @favorited_railtickets.count %></span></a></li>
            <li><%= link_to "機票兌換卷購物車", cart_path %><span></span></li>
            <li><%= link_to "高鐵票購物車", rail_cart_path%><span></span></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: "shared/footer"%>