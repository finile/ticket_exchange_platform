<%= render partial: "shared/navbar" %>
<div id="content">
  <div class="container">
    <div class="row">     
      <div class="col-sm-9">
          <div class="blog_content">

              <div class="num-comments">Posted Flight Tickets</div>
              <% @posted_tickets.each do |ticket| %>
                <div class="comment-block clearfix">
                    <figure>
                        <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                    </figure>
                    <div class="caption">
                        <div class="top clearfix">
                          <div class="txt1">Destination to<a href="#"> <%= ticket.destination %></a></div>
                          <span>|</span>
                          <div class="txt2">Flight Date: <%= ticket.flight_date %></div>
                          <span>|</span>
                          <div class="txt3"><%= link_to 'Show', ticket_path(ticket) %></div>
                        </div>
                        <div class="txt">
                          <%= ticket.airline %> <br>
                          Flight No: <%= ticket.flight_no %> 
                        </div>
                    </div>
                </div>
              <% end %>

              <div class="num-comments">Posted Coupon</div>
              <% @posted_coupons.each do |coupon| %>
                <div class="comment-block clearfix">
                    <figure>
                        <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                    </figure>
                    <div class="caption">
                        <div class="top clearfix">
                          <div class="txt1">Destination to<a href="#"> <%= coupon.destination %></a></div>
                          <span>|</span>
                          <div class="txt2">Expiry Date: <%= coupon.coupon_expiry_date %></div>
                          <span>|</span>
                          <div class="txt3"><%= link_to 'Show', coupon_path(coupon) %></div>
                        </div>
                        <div class="txt">
                          使用期間: <br>
                          <%= coupon.flight_date_from %> ~ <br>
                          <%= coupon.flight_date_to %> 
                        </div>
                    </div>
                </div>
              <% end %>

              <div class="num-comments">Posted Railticket</div>
              <% @posted_railtickets.each do |railticket| %>
                <div class="comment-block clearfix">
                    <figure>
                        <img src="http://placehold.it/70x70" alt="" class="img-responsive">
                    </figure>
                    <div class="caption">
                      <div class="top clearfix">
                        <div class="txt1">Destination to<a href="#"> <%= railticket.destination %></a></div>
                        <span>|</span>
                        <div class="txt2">Train date: <%= railticket.train_date %></div>
                        <span>|</span>
                        <div class="txt3"><%= link_to 'Show', railticket_path(railticket) %></div>
                      </div>
                      <div class="txt">
                        Train no: <%= railticket.train_no %> <br>
                        Train date: <%= railticket.train_date %> <br>
                        Departure time: <%= railticket.departure_time %>
                      </div>
                    </div>
                </div>
             <% end %>
          </div>

      </div>
      <div class="col-sm-3">
        <div class="blog_sidebar">
          <h3><%= current_user.name%></h3>
          <ul class="ul4">
            <li><a href="#">Favorited Flight Ticket<span>125</span></a></li>
            <li><a href="#">Favorited Coupon<span>97</span></a></li>
            <li><a href="#">Favorited Rail Ticket<span>56</span></a></li>
            <li><a href="#">Post Demand<span>24</span></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: "shared/footer"%>