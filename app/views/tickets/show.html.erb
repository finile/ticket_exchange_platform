
Airline: <%= @ticket.airline %><br>
Flight no: <%= @ticket.flight_no %><br>
Flight date: <%= @ticket.flight_date %><br>
Flight time: <%= @ticket.flight_time %><br>
Departure:<%= @ticket.departure %><br>
Destination: <%= @ticket.destination %><br>
Name: <%= @ticket.name %><br>
Price: <%= @ticket.price %><br>
Others: <%= @ticket.others %><br>

<br>
<div class="container">
  <div class="row">
    <% @tickt.comments.each do |comment| %>
       <div>
         <h4><%= comment.user %></h4>
         <p><%= simple_format comment.content %></p>
         <p class="text-muted">
           <em><%= time_ago_in_words(comment.created_at) %> ago -</em>
           <% if current_user.admin? %>
             <%= link_to "Delete", ticket_comment_path(@ticket, comment), method: :delete %>
           <% end %>
         </p>
       </div>

       <hr>
      <% end %>

     <%= form_for [@ticket, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "留言給賣家", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>


<%= link_to 'Back to index', tickets_path %>
