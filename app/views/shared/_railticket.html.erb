<% @railtickets.each do |railticket| %>
  <div class="col-sm-6 col-md-4">
    <div class="railticket-item">
      <li>



      Train no: <%= railticket.train_no %><br>
      Train date: <%= railticket.train_date %><br>
      Departure time: <%= railticket.departure_time %><br>
      Arrive time: <%= railticket.arrive_time %><br>
      Departure:<%= railticket.departure %><br>
      Destination: <%= railticket.destination %><br>
      Name: <%= railticket.name %><br>
      Price: <%= railticket.price %><br>
      Original Discout: <%= railticket.discount %><br>
      Others: <%= railticket.others %><br>

<br>
</li>
<div class="caption">
  <h3><%= link_to railticket.name, railticket_path(railticket) %></h3>
  <%= link_to 'Show', railticket_path(railticket) %>
  <%= link_to 'Edit', edit_railticket_path(railticket) %>
  <%= render partial: "shared/train_favorite", locals: {ticket: railticket} %>
</div>
</div>
</div>
<% end %>


<div class="text-center">
<%= paginate @railtickets %>
</div>
