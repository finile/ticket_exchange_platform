<% @tickets.each do |ticket| %>
  <div class="col-sm-6 col-md-4">
    <div class="ticket-item">
      <li>


      Airline: <%= ticket.airline %><br>
      Flight no: <%= ticket.flight_no %><br>
      Flight date: <%= ticket.flight_date %><br>
      Flight time: <%= ticket.flight_time %><br>
      Departure:<%= ticket.departure %><br>
      Destination: <%= ticket.destination %><br>
      Name: <%= ticket.name %><br>
      Price: <%= ticket.price %><br>
      Others: <%= ticket.others %><br>

<br>
</li>
<div class="caption">
  <h3><%= link_to ticket.name, ticket_path(ticket) %></h3>
  <%= link_to 'Show', ticket_path(ticket) %>
  <% if current_user.id == ticket.user_id %>
    <%= link_to 'Edit', edit_ticket_path(ticket) %>
  <% end -%>


  <%= render partial: "shared/favorite", locals: {ticket: ticket} %>
</div>
</div>
</div>
<% end %>


<div class="text-center">
<%= paginate @tickets %>
</div>
<%= link_to 'Back to index', tickets_path %>
