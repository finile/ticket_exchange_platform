<%= render partial: "shared/navbar" %>

<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <section id="cart-list" class="panel">
          <div>
            <h2>高鐵票購物清單</h2>
          </div>
          <table>
            <tr>
              <th>高鐵票ID</th>
              <th>高鐵車號</th>
              <th>價格</th>
              <th>數量</th>
              <th>個別總價</th>
              <th></th>
            </tr>
            <% @rail_items.each do |rail_item| %>
            <tr>
              <td><%= item.railticket.id %></td>
              <td><%= rail_item.railticket.train_no %><br></td>
              <td>NTD $<%= rail_item.railticket.price %> <br></td>
              <td><%= rail_item.quantity %></td>
              <td><%= rail_item.rail_item_total %></td>
              <td><%= link_to "Detele", remove_from_rail_cart_railticket_path(rail_item.railticket), method: :post, remote: true %><br></td>
            </tr>
          <% end %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>總價</td>
            <td class="amount"><%= current_rail_cart.subtotal %></td>
            <td></td>
          </tr>
        </table>
      </section>

      <%= form_for @rail_order do |f| %>
      <section class="panel">
        <h2>輸入您的聯絡資訊</h2>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address %>
        </div>
      </section>
      <%= f.submit "CHECKOUT", class: "btn" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<%= render partial: "shared/footer"%>