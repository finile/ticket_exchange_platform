Flight date to: <%= @comboard.flight_date_to %><br>
Departure:<%= @comboard.departure %><br>
Destination: <%= @comboard.destination %><br>
User Name: <%= @comboard.name %><br>
Expecting Price: <%= @comboard.price %><br>
Additional Remarkes: <%= @comboard.content %><br>


<br>
<div class="container">
  <div class="row">
    <% @comboard.comments.each do |comment| %>
       <div>
         <h4><%= comment.user.name %></h4>
         <p><%= simple_format comment.content %></p>
         <p class="text-muted">
           <em><%= time_ago_in_words(comment.created_at) %> ago -</em>
           <% if current_user.admin? %>
             <%= link_to "Delete", comboard_comment_path(@comboard, comment), method: :delete, data: {confirm:"Are you sure?"} %>
           <% end %>
         </p>
       </div>

       <hr>
      <% end %>

     <%= form_for [@comboard, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "留言給徵求者", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Back to Board index', comboards_path %>
